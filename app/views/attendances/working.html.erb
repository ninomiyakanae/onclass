<% provide(:title, "出勤中社員一覧") %>
<h1>出勤中社員一覧</h1>

<div>
  <table class="table table-bordered table-condensed table-hover text-center table-striped" id="index_attendance">
    <thead>
      <tr>
        <th class="text-center">社員番号</th>
        <th class="text-center">名前</th>
      </tr>  
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <% user.attendances.each do |attendance| %>
          <% if attendance.designated_work_start_time.present? && attendance.designated_work_end_time.nil? && attendance.worked_on && Date.current %>
        <tr>
          <td><%= user.employee_number %></td>
          <td><%= user.name %></td>
        </tr>
        <% end %>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
<!--today = DateTime.now-->