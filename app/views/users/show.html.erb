<% provide(:title, @user.name) %>
<div>
  <table class="table table-bordered table-condensed user-table">
    <tr>
      <td style="text-align: center;">
          <%= link_to content_tag(:span, "←", class: "arrow-box"), user_path(date: @first_day.prev_month) , class: "btn btn-light" %>
          【<%= l(@first_day, format: :middle) %>】勤怠管理表
          <%= link_to content_tag(:span, "→", class: "arrow-box"), user_path(date: @first_day.next_month) , class: "btn btn-light" %>
      </td>
      <td>指定勤務時間：<%= format_basic_info(@user.work_time) %></td>
      <td colspan="3">基本時間：<%= format_basic_info(@user.basic_time) %></td>
      <td>初日：<%= l(@first_day, format: :short) %></td>
    </tr>

    <tr>
      <td>所属：<%= @user.department.present? ? @user.department : "未所属" %></td>
      <td>氏名：<%= @user.name %></td>
      <td>コード</td>
      <td></td>
      <td>出勤日数：<%= @worked_sum %>日</td>
      <td>締め：<%= l(@last_day, format: :short) %></td>
    </tr>
  </table>
</div>
<div class="btn-users-show">
  <%= link_to "勤怠を編集", attendances_edit_one_month_user_path(date: @first_day), class: "btn custom-button" %>
</div>
<div>
  <table class="table table-bordered table-condensed table-hover" id="table-attendances">
    <thead>  	
     <tr>
      <th rowspan="4">日付</th>	
      <th rowspan="4">曜日</th>	
      <th colspan="3">出社</th>	
      <th colspan="3">退社</th>	
      <th rowspan="2">在社時間</th>	
      <th rowspan="2">備考</th>	
      <th rowspan="4"></th>	
      <th rowspan="4"></th>	
     </tr>	
     <tr>
      <td>時</td><td>分</td><td></td>
      <td>時</td><td>分</td><td></td>
     </tr>
    </thead>  
    <tbody>
    <% @attendances.each_with_index do |day, index| %>
      <tr class="<%= index.even? ? 'even-row' : 'odd-row' %>">
        <td><%= l(day.worked_on, format: :short) %></td>
        <td class="<%= day.worked_on.wday == 6 ? 'saturday' : day.worked_on.wday == 0 ? 'sunday' : 'weekday' %>">
          <%= $days_of_the_week[day.worked_on.wday] %>
        </td>
        <td><%= day.started_at.floor_to(15.minutes).strftime("%H") if day.started_at.present? %></td>
        <td><%= day.started_at.floor_to(15.minutes).strftime("%M") if day.started_at.present? %></td>
        <td>
          <% if day.started_at.blank? && (btn_text = attendance_state(day)) %>
            <%= link_to "#{btn_text}登録", user_attendance_path(@user, day), method: :patch, class: "btn btn-primary btn-attendance" %>
          <% end %>
        </td>    
        <td><%= day.finished_at.floor_to(15.minutes).strftime("%H") if day.finished_at.present? %></td>
        <td><%= day.finished_at.floor_to(15.minutes).strftime("%M") if day.finished_at.present? %></td>
        <td>
        　<% if day.started_at.present? && day.finished_at.blank? && (btn_text = attendance_state(day)) %>
            <%= link_to "#{btn_text}登録", user_attendance_path(@user, day), method: :patch, class: "btn btn-primary btn-attendance" %>
          <% end %>
        </td>            
        <td>
            <% if day.started_at.present? && day.finished_at.present? %>
            <!--<　%= str_times = working_times(day.started_at, day.finished_at).gsub!(/\.?0$/, '') %>-->
            <%= str_times = working_times(day.started_at, day.finished_at) %>
            <% @total_working_times = @total_working_times.to_f + str_times.to_f %>
            <% end %>
        </td>        
        <td><%= day.note %></td>
        <td></td>
        <td></td>
      </tr>
      <% end %>
    </tbody>
    
    <tfoot>
      <!--rowspan:縦結合、colspan：横結合-->
      <tr>
        <td colspan="2"><%= sprintf('%.2f', @worked_sum * format_basic_info(@user.basic_time).to_f) %></td>
        <td colspan="6"></td>
        <td><%= format("%.2f", @total_working_times.to_f) %></td>
        <td colspan="2"></td>
        <td><%= format_basic_info(@user.work_time).to_f * @worked_sum %></td>
      </tr>
    </tfoot> 
  </table>	
</div>        


