<% provide(:title, @user.name) %>
<div>
  <table class="table table-bordered table-condensed user-table">
    <tr>
      <td style="text-align: center;">
          <%= link_to content_tag(:span, "←", class: "arrow-box"), user_path(date: @first_day.prev_month) , class: "btn btn-primary" %>
          【<%= l(@first_day, format: :middle) %>】勤怠管理表
          <%= link_to content_tag(:span, "→", class: "arrow-box"), user_path(date: @first_day.next_month) , class: "btn btn-primary" %>
      </td>
      <td>
      <div class="i">指定勤務開始時間 <%= @user.designated_work_start_time.strftime("%H:%M").gsub(':', '.') if @user.designated_work_start_time.present? %></div>
      <div class="i">指定勤務終了時間 <%= @user.designated_work_end_time.strftime("%H:%M").gsub(':', '.') if @user.designated_work_end_time.present? %></div>
      </td>  
      <td colspan="3">基本時間：<%= format_basic_info(@user.basic_work_time) %></td>
      <td>初日：<%= l(@first_day, format: :short) %></td>
    </tr>

    <tr>
      <td>所属：<%= @user.affiliation.present? ? @user.affiliation : "未所属" %></td>
      <td>氏名：<%= @user.name %></td>
      <td>コード</td>
      <td><%= @user.id %></td>
      <td>出勤日数：<%= @worked_sum %>日</td>
      <td>締め：<%= l(@last_day, format: :short) %></td>
    </tr>
  </table>
</div>
     <!--所属長承認申請のお知らせボタン -->
    <% if logged_in? && current_user.superior? %>
      <% if current_user.superior? && @user.superior == false  %>
      <% else %>
        <div class="superior">
          <% if @approval_notice_lists.present? %>
            <% unless @superior_approval.confirm == "承認" || @superior_approval.confirm == "否認" %>
              <%= link_to "【所属長承認申請のお知らせ】", approvals_edit_user_path(@user), remote: true, :style=>"color:red;", class: "superior_tag" %>
              <span>
                <strong>
                  <%= link_to "#{@approval_count}件の通知があります", approvals_edit_user_path(@user), remote: true, :style=>"color:red;", class: "superior_tag" %>
                  <!--< %= link_to "#{@approval_notice_sum}件の通知があります", approvals_edit_user_path(@user), remote: true, :style=>"color:red;", class: "superior_tag" %>-->
                </strong>
              </span>
            <% else %>
              <p class="not_notice">【所属長承認申請のお知らせ】</p>
            <% end %>
          <% else %>
            <p class="not_notice">【所属長承認申請のお知らせ】</p>
          <% end %>　
         </div>
        <% end %>
      <% end %>
    </table>
  </div>
</div>

