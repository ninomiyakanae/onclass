<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">×</span>
      </button>
      <h1 class="modal-title"></h1>
    </div>
    <div class="modal-body">
      <table class="rine">
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
         <%= form_with(model: @user, url: update_basic_info_user_path(@user), local: true, method: :patch) do |f| %>
            <h1><%= @userからの１カ月分の勤怠申請 %></h1>  
            <table class="frame">
            <% @attendances.each do |day| %>
                <thead>
                  <tr>
                    <th colspan="3">月</th>
                    <th colspan="3">指示者確認㊞</th>
                    <th colspan="3">変更</th>
                    <th colspan="3">勤怠を確認する</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td colspan="3"><%= l(day.worked_on, format: "%Y") %>月</td>
                    <td colspan = "3"><%= f.select :confirmation_status, [["なし", 0],["申請中", 1],["承認", 2],["否認",3]] %></td>
                    <td colspan = "3">1</td>
                    <td colspan = "3"><%= link_to "確認", class: "btn btn-primary" %></td>
                  </tr>                  
                </tbody>
             <% end %>
             </table>
            <div class="center">
              <%= f.submit "変更を送信する", class: "btn btn-primary" %>
            </div> 
          <% end %>
        </div>
        </div>
      </div>
    </div>
  </div>
</div>

