<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">×</span>
      </button>
      <h1 class="modal-title"></h1>
    </div>
    <div class="modal-body">
      <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <table class="frame">
         <%= form_with(model: @user, url: update_basic_info_user_path(@user), local: true, method: :patch) do |f| %>
            <h1><%= @userからの１カ月分の勤怠申請 %></h1>  
            <% @attendances.each do |day| %>
                <thead>
                  <tr>
                    <th width="100">月</th>
                    <th width="300">指示者確認㊞</th>
                    <th width="100">変更</th>
                    <th width="300">勤怠を確認する</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td width="100"><%= l(day.worked_on, format: "%Y") %>月</td>
                    <td width="300"><%= f.select :confirmation_status, [["なし", 0],["申請中", 1],["承認", 2],["否認",3]] %></td>
                    <td width="100">1</td>
                    <td width="300"><%= link_to "確認", class: "btn btn-primary" %></td>
                  </tr>                  
                </tbody>
             <% end %>
             </table>
            <div class="center">
              <%= f.submit "変更を送信する", class: "btn btn-primary" %>
            </div> 
          <% end %>
        <!--</div>-->
      </div>
    </div>
  </div>
</div>
